##############################################
# ðŸ”§ SERVER CONFIGURATION
##############################################

# Port on which your Node.js/Express/Next.js backend runs
PORT=8001


##############################################
# ðŸ§  MONGODB CONFIGURATION
##############################################

# Full MongoDB connection URI for your local/dev environment.
# Example (Mongo Atlas): mongodb+srv://<username>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority
# Used by: connectDb() in your Mongo connection module
MONGO_DB_URI=


##############################################
# ðŸš€ KAFKA CONFIGURATION
##############################################

# Comma-separated list of Kafka broker addresses (hostname:port)
# Example: kafka-broker1:9092,kafka-broker2:9092
# Used by: kafkaConnect() in your Kafka module
KAFKA_BROKER=

# Kafka username for SASL authentication (if enabled)
KAFKA_USER_NAME=

# Kafka password for SASL authentication (if enabled)
KAFKA_PASSWORD=

# Kafka CA certificate used to establish SSL connection (paste as a single line or base64 encoded string)
KAFKA_CA_CERTIFICATE=


##############################################
# âš¡ REDIS CONFIGURATION
##############################################

# Redis host (hostname or IP of your Redis instance)
# Example: localhost or redis-12345.c9.us-east-1-4.ec2.cloud.redislabs.com
REDIS_HOST=

# Redis port number
# Default: 6379
REDIS_PORT=

# Redis username (optional â€” only needed if your Redis requires authentication)
REDIS_USERNAME=

# Redis password (optional â€” only needed if authentication is enabled)
REDIS_PASSWORD=
