# -----------------------------
# REDIS CONFIGURATION
# -----------------------------

REDIS_USERNAME=
# Redis username (often "default" for Redis Cloud or managed Redis)

REDIS_PASSWORD=
# Redis password or access key — keep this secret and never commit to Git!

REDIS_HOST=
# Redis host/domain — provided by your Redis Cloud or managed service

REDIS_PORT=
# Redis port (default is 6379, but managed instances like Redis Cloud use custom ports)

# -----------------------------
# FRONTEND CONFIGURATION
# -----------------------------

FRONTEND_URL=http://localhost:3000
# The base URL of your frontend app (used for CORS, redirects, etc.)

JWT_SECRET=
# Secret key used to sign and verify JWT tokens for authentication.

# -----------------------------
# GITHUB OAUTH (if used for login/integration)
# -----------------------------

GITHUB_CLIENT_ID=
# GitHub OAuth App Client ID (used for GitHub login or API access)
GITHUB_CLIENT_SECRET=
# GitHub OAuth App Client Secret

# -----------------------------
# AWS ECS / DEPLOYMENT CONFIG
# -----------------------------

CLUSTER_ARN=
# ARN of your ECS Cluster where tasks are deployed
TASK_DEFINITION_ARN=
# ARN of your ECS Task Definition (contains container and resource details)
SUBNET_1=
SUBNET_2=
SUBNET_3=
# Subnet IDs for your ECS/Fargate tasks (usually private subnets)
SECURITY_GROUP_ID=
# Security group ID associated with the ECS task/network
BUILDER_CONTAINER_NAME=
# Name of the container used for builds or custom tasks

# -----------------------------
# DATABASE CONFIGURATION
# -----------------------------

MONGO_DB_URI=
# Connection string for your MongoDB database

# -----------------------------
# AWS CREDENTIALS (if directly accessing S3, ECS, etc.)
# -----------------------------

ACCESS_KEY_ID=
# AWS IAM access key ID
SECRET_ACCESS_KEY=
# AWS IAM secret access key

# -----------------------------
# KAFKA CONFIGURATION (for streaming/events)
# -----------------------------

KAFKA_CA_CERTIFICATE=
# Base64 or path to CA certificate for SSL Kafka connection
KAFKA_BROKER=
# Kafka broker URL (host:port)
KAFKA_USER_NAME=
# Kafka username (if using SASL auth)
KAFKA_PASSWORD=
# Kafka password (if using SASL auth)

# -----------------------------
# CLICKHOUSE CONFIGURATION (analytics database)
# -----------------------------

CLICKHOUSE_URL=
# URL of your ClickHouse database server
DATABASE=
# Database name in ClickHouse
CLICKHOUSE_USER_NAME=
# ClickHouse username
CLICKHOUSE_PASSWORD=
# ClickHouse password


